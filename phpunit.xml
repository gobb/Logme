<phpunit bootstrap="./test/bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="Log">
            <directory>./test/src</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory>./src/Logme</directory>
            <exclude>
                <directory suffix="Interface.php">./src/Logme</directory>
            </exclude>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="./docs/coverage" charset="UTF-8"
            yui="true" lowUpperBound="35" highLowerBound="70" showUncoveredFiles="true"
        />    
        <log type="coverage-text" target="php://stdout" lowUpperBound="35"
            highLowerBound="70"
        />
    </logging>
</phpunit>
